        <Button x:Name="btnKaydet" Content="Kaydet" HorizontalAlignment="Left" Margin="357,351,0,0" VerticalAlignment="Top" Width="98" RenderTransformOrigin="0.293,2.781" Height="28" Click="btnKaydet_Click_1"/>
