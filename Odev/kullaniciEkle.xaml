        <Label Content="Email:" HorizontalAlignment="Left" Margin="87,130,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.552,-0.336"/>
        <Label Content="Doğum Tarihi:" HorizontalAlignment="Left" Margin="45,170,0,0" VerticalAlignment="Top"/>
        <Label Content="Telefon:" HorizontalAlignment="Left" Margin="77,210,0,0" VerticalAlignment="Top"/>
