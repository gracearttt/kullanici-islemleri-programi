        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="158,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="297"/>
        <TextBox x:Name="txtTelefon" HorizontalAlignment="Left" Height="23" Margin="158,214,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="297"/>
        <TextBox x:Name="txtAdres" HorizontalAlignment="Left" Height="70" Margin="158,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="297"/>
